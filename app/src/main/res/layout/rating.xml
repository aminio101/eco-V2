<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:gravity="right"
    android:background="@color/toosi"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="امتیاز دهی "
        android:textColor="@color/fili2"
        android:textStyle="bold"
        android:id="@+id/textView_point"
        android:textSize="@dimen/_25ssp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="InvalidId" />
    <TextView
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:text="فاکتور پسماند ها و امتیاز به راننده"
        android:layout_below="@+id/textView_point"
        android:layout_width="wrap_content"
        android:id="@+id/text"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_marginRight="@dimen/_25sdp"
        android:id="@+id/image"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/_35sdp"
        android:layout_below="@+id/text"
        android:src="@color/black"
        android:layout_width="@dimen/_75sdp"
        android:layout_height="@dimen/_75sdp" />

    <TextView
        android:layout_marginRight="@dimen/_20sdp"
        android:id="@+id/textView_name"
        android:layout_below="@+id/text"
        android:layout_toLeftOf="@+id/image"
        android:layout_marginTop="@dimen/_35sdp"
        android:textColor="@color/fili2"
        android:textStyle="bold"
        android:textSize="@dimen/_20ssp"
        android:text="پوریا الهی"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RatingBar

        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_toLeftOf="@+id/image"
        android:layout_below="@+id/textView_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rat"
        android:layout_centerHorizontal="true"
        />


    <Button
        android:layout_alignParentBottom="true"
       android:layout_marginRight="@dimen/_25sdp"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:id="@+id/button_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_25sdp"
        android:textSize="@dimen/_17ssp"
        android:textColor="@color/white"
        android:text="تایید"
        android:background="@drawable/custom_button_send"
       />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/rat"
        android:layout_marginTop="@dimen/_15sdp"
        android:id="@+id/linear"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_marginRight="@dimen/_25sdp"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/_15ssp"

            android:id="@+id/text_name"
            android:text="نام پسماند"
            android:textColor="@color/fili2"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="@dimen/_15ssp"
            android:text="تعداد"
            android:id="@+id/text_number"
            android:textColor="@color/fili2"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:text="امتیاز"
            android:textColor="@color/fili2"
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold" />
    </LinearLayout>
    <view
        android:id="@+id/view"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_marginRight="@dimen/_25sdp"
        android:layout_below="@+id/linear"
        android:background="#FF9800"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2sdp"/>
    <android.support.v7.widget.RecyclerView
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_marginRight="@dimen/_25sdp"
        android:layout_below="@+id/view"
        android:layout_width="match_parent"
        android:id="@+id/list"
        android:layout_height="@dimen/_190sdp"
         />
    <view
        android:id="@+id/view2"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_marginRight="@dimen/_25sdp"
        android:layout_below="@+id/list"
        android:background="#FF9800"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2sdp"/>

    <TextView
        android:textColor="@color/fili2"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_40sdp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/view2"
        android:text="مجموع امتیازات"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/text_sum"
        android:textColor="@color/fili2"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginLeft="@dimen/_40sdp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/view2"
        android:text="30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>