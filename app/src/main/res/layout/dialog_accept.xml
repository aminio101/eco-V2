<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    android:layout_marginTop="@dimen/_10sdp"
    app:cardBackgroundColor="@color/yellow_200"
    android:layout_width="@dimen/_250sdp"
    android:layout_height="@dimen/_300sdp"

    >

        <RelativeLayout
            android:layout_width="@dimen/_250sdp"
            android:layout_margin="@dimen/_3sdp"
            android:layout_height="@dimen/_300sdp">
            <ImageView
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                app:srcCompat="@drawable/ic_delete"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp" />
            <ImageView
                android:id="@+id/image"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                app:srcCompat="@drawable/accept"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp" />
            <com.eco.CoustomTextView
                android:textColor="@color/green_600"
                android:textSize="@dimen/_13ssp"
                android:layout_marginRight="@dimen/_3sdp"
                android:layout_toLeftOf="@+id/image"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="درخواست قبول شد"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/image"
                android:src="@color/black"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp" />
            <com.eco.CoustomTextView
                android:id="@+id/textView_name"
                android:textStyle="bold"
                android:textColor="@color/fili2"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/imageView"
                android:textSize="@dimen/_20ssp"
                android:text="پوریا الهی"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.eco.CoustomTextView
                android:id="@+id/textView_car"
                android:textColor="@color/fili2"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/textView_name"
                android:textSize="@dimen/_14ssp"
                android:text="پراید نوک مدادی"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.eco.CoustomTextView
                android:id="@+id/textView_pelak"
                android:textColor="@color/fili2"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/textView_car"
                android:textSize="@dimen/_14ssp"
                android:text="12ب 365"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.eco.CoustomTextView
                android:layout_marginBottom="@dimen/_20sdp"
                android:layout_centerHorizontal="true"
                android:id="@+id/time"
                android:layout_alignParentBottom="true"
                android:text="زمان تقریبی رسیدن :25 دقیقه"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>


</androidx.cardview.widget.CardView>