<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="#DFDCDC"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="right"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/_150sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ic_bag" />

    <TextView
        android:id="@+id/textView_wallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/_110sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:text="@string/wallet"
        android:textColor="@color/fili2"
        android:textSize="@dimen/_22ssp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView23"
        android:layout_marginStart="@dimen/_175sdp"
        android:layout_marginTop="@dimen/_100sdp"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        app:srcCompat="@drawable/ic_light" />

    <TextView
        android:id="@+id/main_fragment_text_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_65sdp"
        android:layout_marginStart="@dimen/_130sdp"
        android:gravity="center"
        android:text="2625  امتیاز"
        android:textColor="@color/fili5"
        android:textSize="@dimen/_10ssp"
        />

    <View
        android:id="@+id/view8"
        android:layout_marginStart="@dimen/_45sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_width="@dimen/_3sdp"
        android:layout_height="@dimen/_100sdp"
        android:background="@drawable/background_column_main_page"
        app:layout_constraintVertical_bias="0.608" />

</RelativeLayout>