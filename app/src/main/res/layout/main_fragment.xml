<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFDCDC">

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_125sdp">

                <ImageView
                    android:id="@+id/imageView22"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/_5sdp"
                    app:srcCompat="@drawable/ic_bag" />

                <com.eco.CoustomTextView
                    android:id="@+id/textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_40sdp"
                    android:text="@string/wallet"
                    android:textColor="@color/fili2"
                    android:textSize="@dimen/_20ssp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/view8"
                    android:layout_width="1dp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_toLeftOf="@+id/textView21"
                    android:background="@drawable/background_column_main_page" />

                <com.eco.CoustomTextView
                    android:id="@+id/textView21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/main_fragment_text_score"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginEnd="3dp"
                    android:layout_toLeftOf="@+id/imageView23"
                    android:gravity="right|center"
                    android:text="هر100 امتیاز برابر 3 هزار ریال می باشد"
                    android:textSize="@dimen/_8ssp"

                    />

                <com.eco.CoustomTextView
                    android:id="@+id/textView33"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView21"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginEnd="3dp"
                    android:layout_toLeftOf="@+id/imageView23"
                    android:text="موجودی 2000 تومان کیبا"
                    android:textSize="@dimen/_6ssp" />
                <ImageView
                    android:id="@+id/imageView23"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_below="@+id/main_fragment_text_score"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_30sdp"
                    app:srcCompat="@drawable/ic_light" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:layout_toLeftOf="@+id/view8"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/button6"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginRight="@dimen/_2sdp"
                        android:background="@drawable/background_btn_main"
                        android:text="@string/despositAcc"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_8ssp" />

                    <Button
                        android:id="@+id/button7"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:background="@drawable/background_btn_main_fragment"
                        android:text="@string/settingsAcc"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_8ssp" />

                </LinearLayout>

                <com.eco.CoustomTextView
                    android:id="@+id/main_fragment_text_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView18"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="@dimen/_40sdp"
                    android:text="2625  امتیاز"
                    android:textColor="@color/fili5"
                    android:textSize="@dimen/_10ssp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_119sdp"
                android:layout_below="@+id/header">

                <Button
                    android:id="@+id/nextFragment"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="@dimen/_40sdp"
                    android:background="@drawable/background_button_next_step"
                    android:text="@string/nextStep"
                    android:textColor="#ffff"
                    android:textSize="@dimen/_12ssp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_107sdp"
                    android:background="#0097a7">

                    <RelativeLayout
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_20sdp">

                        <com.eco.CoustomTextView
                            android:id="@+id/text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textView3"
                            android:layout_marginTop="@dimen/_9sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_toLeftOf="@+id/textView4"
                            android:text="@string/package1"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/_8ssp" />

                        <ImageView
                            android:id="@+id/imageView19"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_centerHorizontal="true"
                            android:scaleType="fitXY"
                            android:tint="@android:color/white"

                            app:srcCompat="@drawable/ic_arrow_up" />

                        <ImageView
                            android:id="@+id/imageView20"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_below="@+id/textView4"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:tint="@android:color/white"
                            app:srcCompat="@drawable/ic_arrow_down" />

                        <com.eco.CoustomTextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textView3"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:text="0"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/_20sdp" />

                        <com.eco.CoustomTextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imageView19"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:text="@string/numberPackage"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/_8ssp" />

                    </RelativeLayout>

                </RelativeLayout>


                <com.eco.CoustomTextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:text="پسماند خود را انتخاب کنید"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_15ssp" />


                <com.eco.CoustomTextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView2"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:text="پسماند خود را انتخاب کنید"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_10ssp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                android:layout_below="@+id/relative"
                android:layout_marginTop="@dimen/_10sdp">

                <ImageView
                    android:id="@+id/timeDayRight"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_200sdp"
                    android:layout_alignParentRight="true"
                    android:tint="#75BEBCBC"
                    app:srcCompat="@drawable/ic_arrow_right" />

                <ImageView
                    android:id="@+id/timeDayLeft"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_200sdp"
                    android:layout_alignParentLeft="true"
                    android:tint="#75BEBCBC"
                    app:srcCompat="@drawable/ic_arrow_left" />

                <HorizontalScrollView
                    android:id="@+id/list"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp"
                    android:layout_toLeftOf="@+id/timeDayRight"
                    android:layout_toRightOf="@+id/timeDayLeft"
                    android:layoutDirection="rtl"
                    android:orientation="horizontal"
                    android:scrollbars="horizontal">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/linearTop"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:orientation="horizontal" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#AFADAD" />

                        <LinearLayout
                            android:id="@+id/linearBottom"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:orientation="horizontal" />

                    </LinearLayout>
                </HorizontalScrollView>

            </RelativeLayout>

        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>